<div class="content">
  <div class="image-container pull-left">
    <img {{bindAttr src="user.gravatar"}}  />
    {{#view App.KudoBadgeView}}{{user.kudosReceivedNum}}{{/view}}
  </div>
  <h2 class="name pull-left">{{user.firstName}}<br />{{user.lastName}}</h2>
  <a href="#" class="btn btn-large btn-primary btn-more" {{action 'showRow' on='click' target='view'}}>
    {{#if isActive}}
        <span class="icon-chevron-down"></span>
    {{else}}
        <span class="icon-chevron-up"></span>
    {{/if}}
  </a>
</div>

<div class="content-more row">
  <div class="col-lg-6">
    <div class="stars" data-initialized="false"></div>
    {{view Ember.TextArea classNames="kudos-comment" placeholder="I’d like to add kudo because…" rows="3"}}
    <a href="#" class="btn btn-large btn-primary" {{action "addKudo" target="view"}}>add</a>
  </div>

  <div class="col-lg-6">
    <div>
      <h2 class="text-center">Current Week</h2>
      {{#if user.kudoReceiveds}}
        <ul class='kudos-received-list'>
          {{#each kudo in user.kudoReceiveds}}
            <li class="kudo-received">
                <span class="icon-star icon-kudo"></span><strong>{{kudo.value}}</strong>:
              {{#if kudo.comment}}
                {{kudo.comment}}
              {{else}}
                  :-)
              {{/if}}
            </li>
          {{/each}}
        </ul>
      {{else}}
        <p>no kudos given</p>
      {{/if}}
    </div>

    <div>
      <h2 class="text-center">Last Week</h2>
      {{#if user.kudoLastWeeks}}
        <ul class='kudos-received-list'>
          {{#each kudo in user.kudoLastWeeks}}
            <li class="kudo-received">
              <span class="icon-star icon-kudo"></span><strong>{{kudo.value}}</strong>:
              {{#if kudo.comment}}
                {{kudo.comment}}
              {{else}}
                  :-)
              {{/if}}
            </li>
          {{/each}}
        </ul>
      {{else}}
        <p>no kudos given</p>
      {{/if}}
    </div>
  </div>
</div>