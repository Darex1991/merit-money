{{#with controllers.currentUser}}
  <div id="dashboard" class="row-fluid">
    <div id="flash" class="alert"></div>
    <div class="row-fluid">
      <div class="span12">
        <img class="pull-left" {{bindAttr src="gravatar"}}  />
        <p class="pull-left">
          <span class="kudos-left">{{kudosLeft}}</span><i class="icon-star icon-kudo"></i>left
        </p>
      </div>
    </div>
  </div>
{{/with}}

<div id="kudos-content">
  <ul id="users-list">
  {{controller}}
  {{#each user in controller}}
    <li class="coworker">
      <div class="row-fluid">
        <div class="span12">
          <img class="pull-left" {{bindAttr src="user.gravatar"}}  />
          <h2 class="pull-left"><small>{{user.firstName}} {{user.lastName}}</small></h2>
          <a href="#" class="btn btn-primary pull-right" {{action "addKudo" user target="controller.controllers.kudo"}}>add</a>
        </div>
      </div>
    </li>
  {{/each}}
  </ul>
</div>

{{template stats}}